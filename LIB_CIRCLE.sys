  !*****************************************************
  ! Module Name: LIB_CIRCLE
  ! Version:     0.12a
  ! Description: Circle calculations
  ! Date:        2014-09-02
  ! Author:      Robert Andersson <rob@ernell.se>
  !*****************************************************

  !*****************************************************
  ! Circle datatype
  !*****************************************************
  RECORD Circle
      num radius;   ! radius of circle
      pos position; ! coordinates (x,y,z)
  ENDRECORD

  !*****************************************************
  ! Check if two circles overlap each other.
  ! Overlap = TRUE
  !*****************************************************
  FUNC bool COverlap(circle c1,circle c2)
    RETURN Distance(c1.position,c2.position)<(c1.radius+c2.radius);
  ENDFUNC

  !*****************************************************
  ! Circle area
  !*****************************************************
  FUNC num CArea(num radius)
    RETURN (Pow(c1.radius,2)*pi);
  ENDFUNC

  !*****************************************************
  ! Circle circumference
  !*****************************************************
  FUNC num CCircumference(num radius)
    RETURN (2*pi*c1.radius);
  ENDFUNC

  !*****************************************************
  ! Sphere volume
  ! If the circle were a sphere, calculate the volume.
  !*****************************************************
  FUNC num CVolume(num radius)
    RETURN (4*pi*Pow(c1.radius,3))/3;
  ENDFUNC
ENDMODULE
